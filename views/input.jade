extends layout
head
    title= title
body

block content
    script.
        function registerVote(id,imgID,img){
            $.post(location.origin+"/register", {teamid: '1', value: id}, function(result){
                $("span").html(result);
            });

            var container = $(imgID);
            container.empty();
            var img = $("<img/>").attr("src", img).attr("onclick","registerVote("+id+",'"+imgID+"','"+img+"')").css("display","none") // <----- see here
            // add it to the container
            container.append(img);
            img.fadeIn(3000);




        }

    div.row
        #img1.col-md-3
            img.img-rounded.logo(src="images/Deleket-Smileys-9.png", onclick="registerVote(1,'#img1','images/Deleket-Smileys-9.png')")
        #img2.col-md-3
            img.img-rounded.logo(src="images/Deleket-Smileys-10.png", onclick="registerVote(2,'#img2','images/Deleket-Smileys-10.png')")
